<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="double_pendulum_with_base">
    <link name="base">
      <visual name="vis_plate_on_ground">
        <pose>0 0 0.01 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.8</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <visual name="vis_pole">
        <pose>-0.75 0 1.1 0 0 0</pose>
        <geometry>
          <box>
            <size>0.2 0.2 2.2</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <collision name="col_plate_on_ground">
        <pose>0 0 0.01 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.8</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
      <collision name="col_pole">
        <pose>-0.275 0 1.1 0 0 0</pose>
        <geometry>
          <box>
            <size>0.2 0.2 2.2</size>
          </box>
        </geometry>
      </collision>
    </link>
    <!-- upper link, length 1, IC -90 degrees -->
    <link name="upper_link">
      <pose>0.0 1.0 2.1 0.0 0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>.004</ixx>
          <iyy>.004</iyy>
          <izz>.004</izz>
          <ixz>0</ixz>
          <iyz>0</iyz>
          <ixy>0</ixy>
        </inertia> 
      </inertial>
      <visual name="vis_upper_joint">
        <pose>-0.3 -1 0 0 -1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.7</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <visual name="vis_cylinder">
        <pose>0.0 -0.5 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.9</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <visual name="vis_b1">
        <pose>0.0 0.0 0.0 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>
    <!-- lower link, length 1, IC ~-120 degrees more -->
    <link name="lower_link">
      <pose>0.0 2.0 2.1 0 0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>.004</ixx>
          <iyy>.004</iyy>
          <izz>.004</izz>
          <ixz>0</ixz>
          <iyz>0</iyz>
          <ixy>0</ixy>
        </inertia> 
      </inertial>
      <visual name="vis_b2">
        <pose>0.0 0.0 0.0 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <visual name="vis_cylinder">
        <pose>0 -0.5 0.0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.9</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>
    <!-- joint keeping pendulum attached to world -->
    <joint name="world" type="revolute">
      <parent>world</parent>
      <child>base</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>0.0</lower>
          <upper>0.0</upper>
        </limit>
      </axis>
    </joint>
    <!-- pin joint for upper link, at origin of upper link -->
    <joint name="upper_joint" type="revolute">
      <pose>0 -1.0 0 0 0 0</pose>
      <parent>base</parent>
      <child>upper_link</child>
      <axis>
        <limit>
          <effort>1000</effort> 
        </limit>
        <xyz>1.0 0 0</xyz>
      </axis>
    </joint>
    <!-- pin joint for lower link, at origin of child link -->
    <joint name="lower_joint" type="revolute">
      <pose>0 -1.0 0 0 0 0</pose>
      <parent>upper_link</parent>
      <child>lower_link</child>
      <axis>
       <limit>
         <effort>100</effort>
       </limit>
       <xyz>1.0 0 0</xyz>
      </axis>
    </joint>
  </model>
</sdf>
